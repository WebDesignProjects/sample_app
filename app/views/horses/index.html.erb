<p id="notice"><%= notice %></p>

<h1>There are <%= @horses.count %> running in this Race </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
       <th>Ranking</th> 
       <th>% Chance of Winning </th> 
      <th colspan="3"></th>
    </tr>
 </thead>

  <tbody>
    <% @horses.each do |horse| %>
      <tr>
        <td><%= horse.name %></td>
         <td><%= horse.ranking %></td> 
         <td><%= horse.probability + 1 * (100/Horse.sum(:ranking)* horse.ranking ).round  %></td> 
        <!-- <td><#%= link_to 'Show', horse %></td> -->
        <!-- <td><#%= link_to 'Edit', edit_horse_path(horse) %></td> -->
        <!-- <td><#%= link_to 'Destroy', horse, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<div class= "center jumboton">
<%= link_to "New Search", 'countries#index', class:"btn btn-lg btn-primary"%>
</div>

